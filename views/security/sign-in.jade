extends ../layout

block content

    form(method="POST", action="")
        fieldset
            legend Sign In
            if signInFail
                p.alert-error Bad credentials
            mixin input('text', 'Username', 'username', username)
            mixin input('password', 'Password', 'password')
            input(type='hidden', name='_csrf', value=csrf_token)
            input(type="submit", value="Sign In")

